@model ContactoModel

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        Eliminar Contacto
    </div>
    <div class="card-body">


        <form asp-action="Eliminar" asp-controller="Contacto" method="post">

            <input asp-for="Id" type="number" class="form-control" id="id" aria-describedby="id" hidden>

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el contacto : @Html.DisplayTextFor(m => m.Nombre) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Contacto" class="btn btn-secondary">Volver a la vista</a>
        </form>


    </div>
</div>